{% extends 'FrontBundle::base.html.twig' %}
{% block title %}
    {{ parent() }} - Accueil
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <h2>Dernières annonces :</h2>
        {% for post in posts %}
        <div class="post">
            <h3><a href="{{ path('view', {'id' : post.id}) }}">{{ post.titre|upper }}</a></h3>
            <p>Marque : {{ post.marque|upper }}</p>
            <p class="content">{{ post.resume|capitalize }}</p>
            <p class="details">Le <span>{{ post.datePublication|date('d/m/Y') ~ ' à ' ~ post.ville|upper }}</span> </p>
            <hr/>
        </div>
        {% endfor %}
{% endblock %}
{% block sidebar %}
    <aside class="mod w20 pas aside">
        <nav id="navigation" role="navigation">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('index') }}">Accueil</a></li>
                <li>Catégories</li>
                    <ul class="pam">
                    {% for cat in cats %}
                        <div class="post">
                            <li class="categories"><a href="{{path('categorie',{'id':cat.id})}}">{{cat.libelle |capitalize}}</a></li>
                        </div>
                    {% endfor %}
                    </ul>
                <li><a href="{{ path('deposerAnnonce') }}">Déposer annonce</a></li>
{#		<button type="button" class="btn btn-default navbar-btn" onclick="location.href='{{ path('depot') }}'"></button>#}
            </ul>
        </nav>
    </aside>
{% endblock %}
